[template]
src = "nubis-users.tmpl"
dest = "/etc/puppetlabs/puppet/yaml/nubis_users/common.yaml"
prefix = "/arenas/%%ARENA%%/global/nubis-users"

keys = [
<% if @sudo_users -%><% @sudo_users.each do |sudo_users| -%>
    "/<%= sudo_users %>",
<% end -%><% end -%>
<% if @nubis_users -%><% @nubis_users.each do |nubis_users| -%>
    "/<%= nubis_users %>",
<% end -%><% end -%>
]

reload_cmd = "puppet apply --hiera_config /etc/puppetlabs/puppet/hiera.yaml -e 'include nubis_users'"
